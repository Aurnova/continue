{
  "name": "Continue + OpenRouter",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {},
  "containerEnv": {
    "CONTINUE_GLOBAL_DIR": "/home/vscode/.continue"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Continue.continue"
      ],
      "settings": {
        "workbench.startupEditor": "readme",
        "workbench.activityBar.visible": true,
        "continue.telemetryEnabled": false,
        "github.copilot.enable": {
          "*": false
        },
        "github.copilot.chat.enabled": false,
        "extensions.ignoreRecommendations": true,
        "github.copilot.editor.enableCodeActions": false,
        "github.copilot.nextEditSuggestions.enabled": false
      }
    }
  },
  "updateContentCommand": "bash .devcontainer/setup-continue-config.sh || true",
  "postCreateCommand": "bash .devcontainer/setup-continue-config.sh || true; bash .devcontainer/disable-copilot.sh || true",
  "postAttachCommand": "bash .devcontainer/setup-continue-config.sh || true; bash .devcontainer/disable-copilot.sh || true",
  "postStartCommand": "bash .devcontainer/setup-continue-config.sh || true; bash .devcontainer/disable-copilot.sh || true",
  "forwardPorts": []
}